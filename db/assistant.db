-- Table for intents
CREATE TABLE intents (
    id INTEGER PRIMARY KEY AUTOINCREMENT,
    intent_name TEXT NOT NULL UNIQUE,
    description TEXT
);

-- Table for slots (entities)
CREATE TABLE slots (
    id INTEGER PRIMARY KEY AUTOINCREMENT,
    intent_id INTEGER,
    slot_name TEXT NOT NULL,
    slot_value TEXT,
    FOREIGN KEY (intent_id) REFERENCES intents(id)
);

